extends layout

block body
  .navbar.navbar-default.navbar-fixed-top(role="navigation")
   .container
    .navbar-header
      button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-ex1-collapse")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="#") Useless Application

    .collapse.navbar-collapse.navbar-ex1-collapse(ng-controller='NavCtrl')
     #navbar-body.navbar-collapse.collapse
      ul.nav.navbar-nav
        li
          a(href="board") Board
      ul.nav.navbar-nav.navbar-right
        li(ng-if="!authenticated")
          a(href="login") Login
        li(ng-if="!authenticated")
          a(href="signup") Signup
        li(ng-if="authenticated")
          a(href="#", ng-click="logout()") Logout
  .container(ng-controller='AppCtrl')
    div
      .jumbotron
        h1 Hello {{name}}
      div(ng-view)

  script(src='js/lib/angular/angular.js')
  script(src='js/lib/angular/angular-route.js')
  script(src='js/lib/socket.io-client/socket.io.js')
  script(src='js/lib/angular-socket-io/socket.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script(src='js/lib/jquery/jquery-2.0.3.min.js')
  script(src='bootstrap/js/bootstrap.min.js')
